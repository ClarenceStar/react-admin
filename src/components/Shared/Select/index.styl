.select__content
	position absolute
	z-index 10000
	padding-bottom 8px
	font-size 12px
	line-height 1.5
	animation-duration 0.3s

.select--hidden
	left -1000px
	opacity 0

.select-picker
	position relative
	display inline-block
	border 1px solid #d9d9d9
	border-radius 4px
	background-color #fff
	font-size 14px
	cursor pointer
	transition all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)

	&:hover
		border 1px solid rgb(130, 212, 193)

	&__label
		position absolute
		top 50%
		left 0
		overflow hidden
		margin-top -10px
		padding 0 20px 0 8px
		width 100%
		height 20px
		text-overflow ellipsis
		white-space nowrap
		line-height 20px

		&--disabled
			cursor not-allowed !important

	&__input
		position relative
		z-index 2
		display block
		padding 4px 7px
		width 100%
		height 26px !important
		border 0 !important
		border-radius 4px
		background-color transparent !important
		background-image none
		color rgba(0, 0, 0, 0.65)
		font-size 12px
		line-height 1.5
		cursor pointer

		&:hover +.select-picker--clear
			opacity 1

		&--disabled
			cursor not-allowed !important

	&--clear
		position absolute
		top 50%
		right 8px
		z-index 2
		margin-top -6px
		width 12px
		height 12px
		background #fff
		color rgba(0, 0, 0, 0.25)
		font-size 12px
		line-height 12px
		opacity 0
		cursor pointer
		transition color 0.3s ease, opacity 0.15s ease

		&:hover
			color rgba(0, 0, 0, 0.43)
			opacity 1

	&--arrow
		position absolute
		top 50%
		right 8px
		z-index 3
		display inline-block
		margin-top -6px
		width 12px
		height 12px
		filter none
		color rgba(0, 0, 0, 0.43)
		font-size 12px
		line-height 12px
		zoom 1

	&-lg
		font-size 14px
		line-height 34px

		&__input
			height 34px !important
			font-size 14px

	&-small
		font-size 14px
		line-height 24px

		&__input
			height 24px !important
			font-size 14px

.select-menus
	border-radius 4px
	background #fff
	box-shadow 0 1px 6px rgba(0, 0, 0, 0.2)
	white-space nowrap
	font-size 12px

	.select-menu
		display inline-block
		margin 0
		padding 0
		// overflow auto
		max-height 212px
		list-style none
		vertical-align top

		&__group-title
			padding 0 6px
			height 32px
			color rgba(0, 0, 0, 0.45)
			font-size 12px
			line-height 32px

		&__item
			position relative
			display block
			overflow hidden
			padding 5px 6px
			color rgba(0, 0, 0, 0.65)
			text-align center
			text-overflow ellipsis
			white-space nowrap
			font-weight normal
			line-height 22px
			cursor pointer
			transition background 0.3s ease

			&--active
				background #f7f7f7
				font-weight 700

			&:hover
				background rgba(130, 212, 193, 0.6)

			&--expand
				&:after
					position absolute
					right 8px
					color rgba(0, 0, 0, 0.6)
					content '>'
					font-family anticon
					zoom 1

			&--loading
				i
					position absolute
					top 10px
					right 8px
					color #aaa

			&--disabled
				color #ccc
				cursor not-allowed

.select--disabled
	background-color #aaa

	&:hover
		border 1px solid #d9d9d9