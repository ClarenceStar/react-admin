@import "~styles/index";

.tag
    display: inline-block;
    line-height: 20px;
    height: 22px;
    padding: 0 8px;
    border-radius: 4px;
    border: 1px solid #e9e9e9;
    background: #f3f3f3;
    font-size: 12px;
    transition: all .3s cubic-bezier(.78,.14,.15,.86);
    opacity: 1;
    margin-right: 8px;
    cursor: pointer;
    color rgba(0,0,0,.65)
    white-space: nowrap;
    animation-duration .5s

    &:hover
        opacity .85

    &__close-icon
        display: inline-block;
        font-size: 12px;
        transform: scale(.83333333) rotate(0deg);
        zoom: 1;
        cursor: pointer;
        margin-left: 3px;
        transition: all .3s ease;
        opacity: .66;

        &:hover
            opacity 1
        
    &--pink
        color: #f5317f;
        background: #fdd8e7;
        border-color: #fdd8e7;

    &--red
        color: #f04134;
        background: #fcdbd9;
        border-color: #fcdbd9;
    
    &--orange
        color: #f56a00;
        background: #fde3cf;
        border-color: #fde3cf;

    &--green
        color: #00a854;
        background: #cfefdf;
        border-color: #cfefdf;
    
    &--blue
        color: #108ee9;
        background: #d2eafb;
        border-color: #d2eafb;
    
    &--purple       
        color: #7265e6;
        background: #e4e2fa;
        border-color: #e4e2fa;

.tag-checkable
    background-color: transparent;
    border-color: transparent;

    &:hover
        color $primaryColor

    &--checked
        background-color $primaryColor
        color #fff
    
        &:hover
            color #fff
    
  



