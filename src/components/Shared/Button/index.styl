@import "~styles/index";

.button
  display inline-block
  padding 3px 10px
  background #fff
  border 1px solid $primaryColor
  border-bottom-color darken($primaryColor, 10%)
  cursor pointer
  font-size 14px
  letter-spacing 1px
  color $primaryColor

  // &:hover
    // transform translate(0, -1px);

  + .button
    margin-left 10px

  &--primary
    background $primaryColor
    border none
    border-bottom 1px solid darken($primaryColor, 10%)
    color #fff

  &--small
    font-size 12px

  &--large
    font-size 16px

  &--disabled
    cursor not-allowed
    color: rgba(0,0,0,.25);
    background-color: #f7f7f7;
    border 1px solid #d9d9d9
