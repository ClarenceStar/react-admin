  
.content
    position: relative;
    background-color: #ffffff;
    border: none;
    border-radius: 6px 6px;
    background-clip: padding-box;

.content__header
    padding: 13px 20px 14px 20px;
    border-radius: 5px 5px 0 0;
    background: #fff;
    color: #666;
    border-bottom: 1px solid #e9e9e9;
    min-height 35px

.content__title
    margin: 0;
    font-size: 14px;
    line-height: 21px;
    font-weight: bold; 
            
.content__close
    position absolute
    right 20px
    top 13px
    color #000
    opacity 0.3
    cursor pointer

    &:hover
        opacity: 1;
        text-decoration: none;
     
.content__body
    // padding:16px;
    overflow: auto;
    font-size: 12px;
        





