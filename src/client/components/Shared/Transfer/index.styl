@import "~styles/index"

.transfer
    display flex
    align-items center

    &__list
        font-size 12px
        border 1px solid #d9d9d9
        border-radius 4px
        vertical-align middle
        position relative
        width 180px
        height 200px
        padding-top 33px
    
    &__header
        padding 5px 10px
        border-radius 4px 4px 0 0
        background $primaryColor
        color #fff
        border-bottom 1px solid #e9e9e9
        overflow hidden
        position absolute
        top 0
        left 0
        width 100%
        min-height 25px
        text-align center
    
    &__body
        font-size 12px
        position relative
        height 100%

    &__list-content
        height 100%
        // overflow auto

        li
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            padding 7px 15px
            min-height 32px
            transition all .3s
        
        div:last-child

            .transfer__drop-floor
                height 25px

                &--active
                    height 30px

        div:first-child
            li
                padding-bottom 7px
                min-height 32px

            .transfer__drop-floor
                height 8px

                &--active
                    height 30px

    &__content-item
        &:hover
            background-color lighten($primaryColor, 60%)
        
        &--disabled
            cursor not-allowed
            color rgba(0,0,0,.25)

            .checkbox-wrapper
                cursor not-allowed

            .transfer__content-click-item
                .fa
                    cursor not-allowed
        
        &--click-mode
            cursor default

            &:hover
                background-color $primaryColor
                color #fff
    
    &__drop-floor
        opacity 0
        height 8px
        width 100%
        background-color red

        &--active
            display block
            opacity .5
            height 30px
            margin 5px 0
            background-color #ccc
    

    &__operation
        padding 10px
        .button
            display block
        .button+.button
            margin-left 0px
        
        &--click-mode
            text-align center
            color rgba(0,0,0,0.5)
            width 50px
    
    &__content-click-item
        height 20px
        display flex
        justify-content space-between
        line-height 20px
        .fa
            width 20px
            height 20px
            text-align center
            line-height 20px
            font-size 14px
            cursor pointer
            border 1px solid
            border-radius 3px
            box-sizing border-box
    
    &__footer
        border-top 1px solid #e9e9e9
        border-radius 0 0 4px 4px
        position absolute
        bottom 0
        left 0
        width 100%

.transfer__content-item--click-mode.transfer__content-item--disabled
  cursor not-allowed


.transfer__content-item--disabled.transfer__content-item--click-mode:hover
  background-color #fff
  color rgba(0,0,0,.25)

    
